{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "module": "NodeNext",
    "moduleResolution": "Node",
    "baseUrl": "./src",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src"]
}
